public class daoDetailBills implements Idao<DETAIL_BILLS>{
	MySQLDataAccess con = null;

	public static daoDetailBills getDaoDetailBills() {
		return new daoDetailBills();
	}

	public daoDetailBills() {
		con = new MySQLDataAccess();
	}
	@Override
	public int Insert(DETAIL_BILLS t) {
		int k = 0;
	    String sql = "INSERT INTO BILLS (DATECHECKIN, DATECHECKOUT, NOTE, PAYMENT_METHODS, ID_ACCOUNT, ID_ADDRESS, ID_SHIP, ID_SELL_VOUCHER, ID_STAFF, ID_STATUS_BILL) VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?, ?)";
		k = con.ExecuteUpdateSQL(sql, t.getDATECHECKIN(), t.getDATECHECKOUT(), t.getNOTE(), t.isPAYMENT_METHODS(), t.getID_ACCOUNT(), t.getID_ADDRESS(), t.getID_SHIP(), t.getID_SELL_VOUCHER(),
					t.getID_STAFF(), t.getID_STATUS_BILL());

	    System.out.println("Insert bill thành công");

	    return k;
	}

