	// tiêu đề message.setSubject("Gửi được email rồi!!!"); // quy định ngày gửi
	message.setSentDate(new Date());

	quy đinh
	email nhận
	phản hồi message.setReplyTo();

	// Thiết lập trường Reply-To cho email

	message.setText(msgText);

